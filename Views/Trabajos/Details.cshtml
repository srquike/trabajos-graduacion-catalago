@model CatalogoDeTrabajosDeGraduacion.Models.Trabajo

@{
    ViewData["Title"] = "Detalles";
    string facultad = string.Empty;
}

<h1>@Model.TrabaTitulo</h1>

<div>
    <h4>Detalles</h4>
    <hr />
    <dl class="row">
        <dt>
            @Html.DisplayNameFor(model => model.TrabaId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TrabaId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrabaTitulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrabaTitulo)
        </dd>
        <dt class = "col-sm-2">
            <span>Fecha de envio</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrabaFecha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TpTraba)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TpTraba.TpTrabaNombre)
        </dd>
        <dt>
            <span>Autores</span>
        </dt>
        @foreach (var autor in Model.Autores)
        {
            facultad = autor.Carre.Facul.FaculNombre;
            <dd>@autor.AutorApellido<span>, </span>@autor.AutorNombre<span>.</span></dd>
        }
        <dt>
            <span>Facultad</span>
        </dt>
        <dd>
            <span>@facultad</span>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>
